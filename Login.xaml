<Window x:Class="Kursovaya2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kursovaya2"
        Title="Login" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F5F5" Icon="/KeyAuth.png">
    <Window.Resources>
        <!-- Стиль для кнопки с градиентом и эффектами -->
        <Style TargetType="Button" x:Key="GreenGradientButtonStyle">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#27AE60" Offset="0"/>
                        <GradientStop Color="#2ECC71" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2ECC71" Offset="0"/>
                                            <GradientStop Color="#27AE60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#229954" Offset="0"/>
                                            <GradientStop Color="#27AE60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center" Background="#2ECC71" Width="362" >
            <TextBlock Text="Добро пожаловать!" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center" 
                       Foreground="White"/>
            <TextBlock Text="Введите свои данные для входа" 
                       FontSize="14" 
                       Margin="0,0,0,10" 
                       HorizontalAlignment="Center" 
                       Foreground="White"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="20" Background="White" 
                BorderBrush="#FF0BC705" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="30">
            <StackPanel>
                <StackPanel>
                    <Label Content="Логин" 
                           FontSize="14" 
                           Foreground="#34495e" 
                           Margin="0,0,0,5"/>
                    <TextBox x:Name="textboxLogin" 
                             FontSize="14" 
                             Height="40" 
                             BorderBrush="#bdc3c7" 
                             BorderThickness="1" 
                             Padding="10" 
                             TabIndex="1" 
                             TextChanged="textboxLogin_TextChanged"/>
                </StackPanel>

                <StackPanel Margin="0,20,0,0">
                    <Label Content="Пароль" 
                           FontSize="14" 
                           Foreground="#34495e" 
                           Margin="0,0,0,5"/>
                    <PasswordBox x:Name="passwordBox" 
                                 FontSize="14" 
                                 Height="40" 
                                 BorderBrush="#bdc3c7" 
                                 BorderThickness="1" 
                                 Padding="10" 
                                 PasswordChanged="passwordBox_PasswordChanged" 
                                 TabIndex="2"/>

                    <!-- Добавленный TextBox для отображения пароля -->
                    <TextBox x:Name="textboxPass" 
                             FontSize="14" 
                             Height="40" 
                             BorderBrush="#bdc3c7" 
                             BorderThickness="1" 
                             Padding="10" 
                             Visibility="Collapsed" 
                             TextChanged="textboxPass_TextChanged" 
                             Loaded="textboxPass_Loaded"/>
                </StackPanel>

                <CheckBox x:Name="ShowPasswordCheckBox" 
                          Content="Показать пароль" 
                          FontSize="12" 
                          Foreground="#34495e" 
                          Margin="0,10,0,0" 
                          Checked="ShowPasswordCheckBox_Checked" 
                          Unchecked="ShowPasswordCheckBox_Unchecked" Background="#FFCFEDCC"/>

                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Style="{StaticResource GreenGradientButtonStyle}" 
                        Width="260" 
                        Height="40" 
                        Margin="0,20,0,0" 
                        Click="Button_Click" 
                        IsDefault="True"/>

                <Button x:Name="RegistrationButton" 
                        Content="Регистрация" 
                        Style="{StaticResource GreenGradientButtonStyle}" 
                        Width="260" 
                        Height="40" 
                        Margin="0,10,0,0" 
                        Background="Transparent" 
                        BorderBrush="#bdc3c7" 
                        Foreground="#27AE60" 
                        Click="RegButton"/>

                <Label x:Name="ErrorLabel" 
                       FontSize="12" 
                       Foreground="Red" 
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>